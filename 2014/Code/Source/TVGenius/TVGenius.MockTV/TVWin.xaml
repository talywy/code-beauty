<Window x:Class="TVGenius.MockTV.TVWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TVWin" Height="350" Width="525">
    <DockPanel>
        <Grid>
            <TextBlock Name="TxtScreen" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Top" />
            <MediaElement Name="Media" ></MediaElement>
            <TextBlock Name="TxtTime" VerticalAlignment="Bottom" Margin="0,5,0,0" />
        </Grid>
    </DockPanel>
</Window>
